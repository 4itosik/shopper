<div class='container'>
  <div class="row">
    <ul class="thumbnails">
      <% @categories.each do |category| %>
        <li class="span4">
          <div class="thumbnail">
            <%= image_tag category.cover, { size: '300x200', crop: 'fill' } %>
          </div>
          <div>
            <h3><%= link_to category.name, category_products_path(category) %></h3>
            <p><%= category.description %><p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>