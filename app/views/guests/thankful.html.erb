<div class='container'>
  <div class='row'>
    <div class='span8 offset2'>
      <div class='well well-elderflower no-actions'>
        <%= content_tag :fieldset do %>
          <p class='lead'>Thank you for your purchase, keep enjoy shopping! :)</p>
          <p>I hope you enjoy your Shopper products.</p>
          <p>Your transaction has been completed, and a receipt for your purchase has been emailed to you.</p>
          <p>If you have any questions about your order, or comments about your shopping experience, please contact our and let our know.</p>  
        <% end %>
      </div>
    </div>
  </div>
  <div class='row'>
    <div class='span8 offset2'>
      <%= form_for @guest, as: :guest, url: guest_path(@guest), html: { class: 'form-horizontal well well-elderflower' } do |f| %>
        <%= content_tag :fieldset do %>
          <legend>Easy Keep Shopping</legend>
          <div class='control-group'>
            <%= f.label :password, class: 'control-label' %>
            <div class='controls'>
              <%= f.password_field :password, placeholder: "Password" %>
              <span class="help-inline"><small>minimum is 6 characters</small></span>
            </div>
          </div>
          <div class='control-group'>
            <%= f.label :password_confirmation, 'Retype', class: 'control-label' %>
            <div class='controls'>
              <%= f.password_field :password_confirmation, placeholder: "Password confirmation" %>
            </div>
          </div>
        <% end %>
        <div class='form-actions'>
          <%= f.submit 'Create Account', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>