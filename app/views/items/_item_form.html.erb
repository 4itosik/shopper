<td><%= image_tag item.product.cover, { size: '50x50' } %></td>
<td><%= item.product.name %></td>
<td>
  <%= form_for item, remote: true do |f| %>
    <%= f.number_field :quantity, in: 1..item.product.quantity, class: 'input-mini'%>
    <%= f.submit id: 'submit', class: 'hide' %>
  <% end %>
</td>
<td><%= number_to_currency(item.unit_price) %></td>
<td><%= full_price(item) %></td>