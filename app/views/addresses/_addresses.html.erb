<ul class="well main-list">
  <% current_user.addresses.sort.each do |address| %>
    <li>
      <%= link_to user_address_path(current_user, address) do %>
        <%= address.street_address %> / <%= address.country.name %>
      <% end %>

      <div class="pull-right">
        <% if current_user.default_address == address %><i class="icon-star"></i><% end %>
        <%= link_to edit_user_address_path(current_user, address), class: 'btn btn-mini' do %><i class='icon-edit'></i><% end %>
        <%= link_to user_address_path(current_user, address), method: :delete, confirm: "You sure?", class: 'btn btn-mini' do %><i class='icon-remove'></i><% end %>
      </div>
    </li>
  <% end %>
</ul>