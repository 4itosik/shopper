<div id="order_address">
  <div class='control-group'>
    <%= f.label :street_address, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_area :street_address, size: "10x5", class: 'input-xlarge' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :city, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :city, class: 'input-xlarge' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :state, class: 'control-label' %>
    <div class='controls'>
      <%= f.text_field :state, class: 'input-xlarge' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :zip, class: 'control-label' %>
    <div class='controls'>
      <%= f.number_field :zip, class: 'input-xlarge' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :country, class: 'control-label' %>
    <div class='controls'>
      <%= f.collection_select(:country, Country.all, :id, :name) %>
    </div>
  </div>
  <div class='control-group'>
      <%= f.label :phone, class: 'control-label' %>
    <div class='controls'>
      <%= f.phone_field :phone, class: 'input-xlarge' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.label :email, class: 'control-label' %>
    <div class='controls'>
      <%= f.email_field :email, class: 'input-xlarge' %>
    </div>
  </div>
  <div class='control-group'>
    <%= f.check_box :default, class: 'input-xlarge' %>
    <span>Set this address as defaulte</span>
  </div>
  <%= f.hidden_field :user_id, value: current_user.id %>
</div>
