<div class='container'>
  <div class='row'>
    <div class='span8 offset2'>
      <div class='well well-elderflower no-actions'>
        <%= content_tag :fieldset do %>
          <p class='lead'>Thank you for your purchase, keep enjoy shopping! :)</p>
          <p>I hope you enjoy your Shopper products.</p>
          <p>Your transaction has been completed, and a receipt for your purchase has been emailed to you.</p>
          <p>If you have any questions about your order, or comments about your shopping experience, please contact our and let our know.</p>
          <br>
          <div class='pull-right'>
            <a href='/' class='btn'>Continue Shopping</a>
            <% if current_user and current_user.member? %><a href='<%= user_orders_path(current_user) %>' class='btn btn-success'>Go to Orders History</a><% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <% if @guest.present? and @guest.guest? %>
    <div class='row'>
      <div class='span8 offset2'>
        <%= render 'orders/status/purchased_sign_up' %>
      </div>
    </div>
  <% end %>
</div>