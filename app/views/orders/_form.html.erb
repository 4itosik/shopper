<%= form_for @order do |order_field| %>
  <%= content_tag :fieldset, class: 'span5 offset3' do %>
    <%= order_field.collection_select :address_id, Address.all, :id, :street_address, { include_blank: true }, data: { remote: true, url: url_for(controller: 'orders', action: 'edit') } %>
    <%= order_field.fields_for :address do |f| %>
      <%= render 'addresses/address', f: f %>
    <% end %>
    <div class='offset2'>
      <%= order_field.submit "Purchase", class: 'btn btn-large span3 btn-success' %>
    </div>
  <% end %>
<% end %>
