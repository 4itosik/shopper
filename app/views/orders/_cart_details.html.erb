<div id="viewCart" class="modal fade">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Your shopping cart contains the following items:</h3>
  </div>
  <div class="modal-body">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Product pic</th>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Unit Price</th>
          <th>Full Price</th>
        </tr>
      </thead>
      <% @order.items.each do |item| %>
        <%= content_tag_for :tr, item do %>
          <%= render item %>
        <% end %>
      <% end %>
    </table>
    <%= link_to 'Check out', edit_order_path(@order), class: 'btn btn-primary pull-right' %>
  </div>
</div>