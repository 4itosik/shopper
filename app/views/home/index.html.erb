<div class="hero-unit">
  <div class="home-slide container">
    <h1>Shoping Cart</h1>
    <p class='lead'>Enjoy Shopping At Anytime</p>
    <p>
      <%= link_to "Register", new_user_registration_path, class: 'btn btn-success btn-large' unless current_user %>
    </p>
  </div>
</div>
<div class="initial">
  <div class='container'>
    <ul class="thumbnails">
      <% @products.each do |product| %>
      <li class="thumbnail home-thumnails">
        <div class="caption">
          <%= link_to product do %>
            <%= image_tag product.cover_url(:thumb), { size: '150x200' }  %>
            <h4><%= product.name %></h4>
          <% end %>
          <p>Price: <%= number_to_currency product.price %></p>
          <div class="home-add-cart"><%= render 'carts/add_to_cart', product: product %></div>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
