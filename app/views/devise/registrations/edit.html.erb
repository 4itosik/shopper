<header class='jumbotron subhead'>
  <div class='container'>
    <h1>Edit <%= resource_name.to_s.humanize %>: <%= resource %></h1>
  </div>
</header>
<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, method: :put, class: 'form-horizontal' }) do |f| %>
  <div class='clearfix'>
    <%= content_tag :fieldset, class: 'span7 offset2' do %>
      <div class='control-group'>
        <%= f.label :name, class: 'control-label' %>
        <div class='controls'>
          <%= f.text_field :name, class: 'input-xlarge' %>
        </div>
      </div>
      <div class='control-group'>
        <%= f.label :email, class: 'control-label' %>
        <div class='controls'>
          <%= f.email_field :email, class: 'input-xlarge' %>
        </div>
      </div>
      <div class='control-group'>
        <%= f.label :avatar, class: 'control-label' %>
        <div class='controls'>
          <%= puts current_user.avatar %>
          <%= image_tag current_user.avatar_url(:thumb) %>
          <%= f.file_field :avatar %>
        </div>
      </div>
      <div class='control-group'>
        <%= f.label :bio, class: 'control-label' %>
        <div class='controls'>
          <%= f.text_area :bio, size: "10x5" , class: 'input-xlarge' %>
        </div>
      </div>
      <div class='control-group'>
        <%= f.label :password, class: 'control-label' %>
        <div class='controls'>
          <%= f.password_field :password, :autocomplete => "off", class: 'input-xlarge' %>
          <span class="help-block">Leave empty if you don't want to change</span>
        </div>
      </div>
      <div class='control-group'>
        <%= f.label :password_confirmation, "Retype Password" ,class: 'control-label' %>
        <div class='controls'>
          <%= f.password_field :password_confirmation, class: 'input-xlarge' %>
          <span class="help-block">Must be the same as the one above</span>
        </div>
      </div>
      <div class='offset2'>
        <%= f.submit "Update", class: 'btn btn-large btn-success span3' %>
      </div>
    <% end %>
    </div>
  <% end %>
  <%= render 'addresses/addresses_list' %>
</div>
